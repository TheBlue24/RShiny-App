library(shiny)
cancer <- read.csv("diabetes.csv")
ui <- fluidPage(
  titlePanel("demo"),
  sidebarLayout(
    sidebarPanel(
      selectInput("selectInp_1","select the Person with (1) or without diseases(0)",choices = cancer$Outcome)
    ),
    mainPanel(
      paste("Your Dataframe"),
      tableOutput("cancerdata")
    )
  )
)
server <- shinyServer(function(input,output){
  output$cancerdata <- renderTable({
    personFilter <- subset(cancer,cancer$Outcome==input$selectInp_1)
  })
})
shinyApp(ui=ui,server=server)
